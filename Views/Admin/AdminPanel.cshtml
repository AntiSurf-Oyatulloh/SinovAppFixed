@{
    ViewData["Title"] = "Admin Panel";
}

<h2>Admin Panel</h2>
<p>Admin sahifasiga xush kelibsiz!</p>

<a href="@Url.Action("AddBook", "Admin")">Yangi kitob qo'shish</a>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var book in Model)
    {
        <tr>
            <td>@book.Title</td>
            <td>@book.Author</td>
            <td>@book.Category</td>
            <td>
                <form method="post" action="@Url.Action("DeleteBook", "Admin")">
                    <input type="hidden" name="title" value="@book.Title" />
                    <button type="submit">O'chirish</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

<a href="@Url.Action("Statistics", "Admin")">Statistikalarni ko'rish</a>