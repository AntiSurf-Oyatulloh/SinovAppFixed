@model SinovApp.Models.Book

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Model.ImagePath" class="img-fluid rounded shadow" alt="@Model.Title">
            }
            else
            {
                <div class="bg-light rounded shadow d-flex align-items-center justify-content-center" style="height: 400px;">
                    <i class="bi bi-book text-muted" style="font-size: 8rem;"></i>
                </div>
            }
        </div>
        <div class="col-md-8">
            <h1 class="mb-3">@Model.Title</h1>
            <p class="text-muted mb-2">
                <i class="bi bi-person"></i> Muallif: @Model.Author
            </p>
            <p class="text-muted mb-2">
                <i class="bi bi-tag"></i> Kategoriya: @Model.Category
            </p>
            <p class="text-muted mb-2">
                <i class="bi bi-calendar"></i> Qo'shilgan sana: @Model.CreatedAt.ToString("dd.MM.yyyy")
            </p>
            <p class="text-muted mb-2">
                <i class="bi bi-eye"></i> Ko'rishlar: @Model.ViewCount
            </p>
            <p class="text-muted mb-4">
                <i class="bi bi-download"></i> Yuklashlar: @Model.DownloadCount
            </p>

            <div class="mb-4">
                <h5>Tavsif</h5>
                <p>@Model.Description</p>
            </div>

            <div class="d-flex gap-2">
                @if (!string.IsNullOrEmpty(Model.FilePath) || !string.IsNullOrEmpty(Model.PdfLink))
                {
                    <a asp-action="Download" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="bi bi-download"></i> Yuklab olish
                    </a>
                }
                <a href="javascript:history.back()" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Orqaga
                </a>
            </div>
        </div>
    </div>
</div> 